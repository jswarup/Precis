export SWTOP=`pwd`/..
export P4SWTOP=`pwd`/..
export SWCFG=Debug
export SWPIV=`pwd`
export SAVED_PATH=$SWTOP/toolkit/tests:/c/Tools/perl64/bin:/c/Tools/Strawberry/perl/bin:$PATH;
export PATH=$SWTOP/delivery/bin/vs10-${SWCFG}Win32:$SAVED_PATH
export EXT=.win

function ResetClip()
{
	cmd.exe /c "echo off|clip"
}

function SwitchPath()
{
	SWCFG=$1
	export PATH=$SWTOP/delivery/bin/vs10-${SWCFG}Win32:$SAVED_PATH
	title "$SWCFG : $SWPIV"
}

function BuildYL()
{
	( 	\
		cd $SWTOP/agents/regex_abraxas/compilers/slm;\
		$SWTOP/agents/regex_abraxas/compilers/posix/MISC/NT/byacc.exe  -pslmyy -b slm -v -d slmparse.y;\
		flex -Pslmyy -Caer -oslmscan.c slmscan.l;	\
		cp slmparse.c slm.tab.c;\
		cp slmparse.h slm.tab.h;\
	)
	( 	\
		cd $SWTOP/agents/regex_abraxas/compilers/pcre;\
		$SWTOP/agents/regex_abraxas/compilers/posix/MISC/NT/byacc.exe  -prxpyy -b rxp -v -d rxpparse.y;\
		cp rxpparse.c rxp.tab.c;\
		cp rxpparse.h rxp.tab.h;\
	)
	(	\
		cd $SWTOP/agents/regex_abraxas/compilers/pcre;\
		$SWTOP/agents/regex_abraxas/compilers/posix/MISC/NT/flex.exe -Prxpyy -Caer -orxpscan.c  rxpscan.l; \
	)
	( 	\
		cd $SWTOP/agents/regex_abraxas/compilers/posix;\
		$SWTOP/agents/regex_abraxas/compilers/posix/MISC/NT/byacc.exe -prxyy -v -d parse.y;\
	)
}

